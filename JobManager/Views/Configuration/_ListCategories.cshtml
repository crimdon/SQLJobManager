@model IEnumerable<JobManager.Data.EditableCategory>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editable)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.Id })
        </td>
    </tr>
}

</table>
